
@model eUseControl.Web.Models.UserNews
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Top", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
     @Html.AntiForgeryToken()
     <div class="normalheader ">
          <div class="hpanel">
               <div class="panel-body">
                    <form method="get" class="form-horizontal">
                         <div class="form-group">
                              <label class="col-sm-2 control-label">Дата:</label>

                              <div class="col-sm-10">
                                   <div class="form-group">
                                        <div class="panel-body">
                                             <h5>Date/time picker</h5>
                                             <p>Date/time picker widget based on twitter bootstrap</p>
                                             <div class="form-group">
                                                  <div class="input-group date" id="datetimepicker1">
                                                       <span class="input-group-addon">
                                                            <span class="fa fa-calendar"></span>
                                                       </span>

                                                       @Html.EditorFor(m => m.Data, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                                  </div>
                                             </div>
                                        </div>
                                   </div>
                              </div>
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group">
                              <label class="col-lg-2 control-label">Новости:</label>


                              <div class="note-editable" contenteditable="true">
                                   @Html.TextAreaFor(model => model.Noutati, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                              </div>
                         </div>
                         <div class="form-group">
                              @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "control-label col-md-2" })
                              <div class="col-md-10">
                                   <input type="file" name="ImageFile" class="btn btn-default" />
                              </div>
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="hr-line-dashed"></div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group">
                              <div style="text-align:center">
                                   <div class="col-sm-8 col-sm-offset-2">
                                        <button class="btn btn-primary" type="submit">Create</button>
                                        <a href="@Url.Action("Index", "Top")" class="btn btn-primary">Back to List</a>
                                   </div>
                              </div>
                         </div>
                    </form>
               </div>
          </div>

     </div>
}