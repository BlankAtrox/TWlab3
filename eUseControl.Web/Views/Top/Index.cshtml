@model IEnumerable<eUseControl.Domain.Entities.User.News>
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Top";
}


<div class="normalheader ">
     <div style="text-align:center">
          <button type="button" class="btn btn-info btn-lg">@Html.ActionLink("Create New", "Create")</button>
     </div>
</div>

<div class="content">
     <div class="row">
          <div style="text-align:center">
               <div class="panel-body">
                    <h3>РЕДАКТИРОВАТЬ ОБНОВЛЕНИЯ АНИМЕ</h3>
                    <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                         <tbody>
                              @foreach (var row in Model)
                              {
                                   <tr>
                                        <td>@row.Data</td>
                                        <td align="left"><img src="@Url.Content(@row.Foto)" width="33" height="27" />   @row.Noutati</td>
                                        <td>
                                             <button class="btn btn-info " type="button"><i class="fa fa-paste"></i> @Html.ActionLink("Edit", "Edit", new { id = row.Id })</button>
                                             <button class="btn w-xs btn-primary2" type="button"> <span class="bold">@Html.ActionLink("Details", "Details", new { id = row.Id })</span></button>
                                             <button type="button" class="btn btn-danger"><i class="fa fa-trash-o"></i>@Html.ActionLink("Delete", "Delete", new { id = row.Id })</button>
                                        </td>
                                   </tr>
                              }
                         </tbody>
                    </table>
               </div>
          </div>
     </div>
</div>

