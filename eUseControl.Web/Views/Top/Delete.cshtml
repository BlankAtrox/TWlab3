@model eUseControl.Domain.Entities.User.News

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Topuri";
}
<div class="content content-boxed">
     <div class="row">
          <div class="col-lg-12">
               <div class="hpanel blog-article-box">
                    <div class="panel-body">
                         <div class="row">
                              <style>
                                   .column {
                                        float: left;
                                        width: 50%;
                                   }
                              </style>
                              <div class="column">
                                   <h4>Дата: @Html.DisplayFor(model => model.Data)</h4>
                                   <h4>Новости:</h4>
                                   <div style="text-align: justify;">
                                        <h5>@Html.DisplayFor(model => model.Noutati)</h5>
                                   </div>
                              </div>
                              <div class="column">
                                   <div class="pull-right">
                                        <img class="img-responsive" src="@Url.Content(Model.Foto)" width="300" height="500" alt="">
                                   </div>
                              </div>
                         </div>
                         <div style="text-align:center">
                              <h3>Are you sure you want to delete this?</h3>
                              @using (Html.BeginForm())
                              {
                                   @Html.AntiForgeryToken()
                                   <button class="ladda-button btn btn-danger" data-style="contract" type="submit" value="Delete">Delete<span class="ladda-label"></span><span class="ladda-spinner"></span></button>
                                   <button class="ladda-button  btn btn-info" data-style="slide-left"><span class="ladda-label">@Html.ActionLink("Back to List", "Index")</span><span class="ladda-spinner"></span></button>
                              }
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>



