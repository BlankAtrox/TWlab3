@model eUseControl.Domain.Entities.User.News
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Home";
}
@using (Html.BeginForm("Edit", "Top", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
     @Html.AntiForgeryToken()
     <div class="normalheader ">
          <div class="hpanel">
               <div class="panel-body">
                    <form method="get" class="form-horizontal">
                         <div class="form-group">
                              <label class="col-sm-2 control-label">Denumirea</label>

                              <div class="col-sm-10">
                                   @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                                   @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })

                              </div>

                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group">
                              <label class="col-lg-2 control-label">Descriere</label>


                              <div class="note-editable" contenteditable="true">
                                   @Html.TextAreaFor(model => model.Noutati, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                              </div>
                         </div>
                         <div class="form-group">
                              @Html.HiddenFor(model => model.Foto, new { htmlAttributes = new { @class = "form-control" } })
                         </div>
                         <div class="hr-line-dashed"></div>
                         <div class="hr-line-dashed"></div>
                         <div class="hr-line-dashed"></div>
                         <div class="form-group">
                              <div style="text-align:center">
                                   <div class="col-sm-8 col-sm-offset-2">
                                        <button class="ladda-button btn btn-danger" data-style="contract" type="submit" value="Save">Save<span class="ladda-label"></span><span class="ladda-spinner"></span></button>
                                        <button class="ladda-button  btn btn-info" data-style="slide-left"><span class="ladda-label">@Html.ActionLink("Back to List", "Index")</span><span class="ladda-spinner"></span></button>
                                   </div>
                              </div>
                         </div>
                    </form>
               </div>
          </div>

     </div>
}
