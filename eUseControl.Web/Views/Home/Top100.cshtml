@model IEnumerable<eUseControl.Domain.Entities.User.Topuris>
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Home";
     int i = 0;
}

<!-- Main Wrapper -->
<div class="normalheader ">
     <div class="hpanel">
          <div class="panel-body">
               <a class="small-header-action" href="">
                    <div class="clip-header">
                         <i class="fa fa-arrow-up"></i>
                    </div>
               </a>

               <div id="hbreadcrumb" class="pull-right m-t-lg">
               </div>
               <h2 class="font-light m-b-xs">
                    Top100
               </h2>
          </div>
     </div>
</div>

<div class="content">

     <div class="row">

          @foreach (var row in Model)
          {
               if (i == 4)
               {
                    <div class="row"></div>
                    i = 0;
               }
               i++;
               <div class="col-lg-3">
                    <div class="hpanel blog-box">
                         <div class="panel-image">
                              <img class="img-responsive" src="@Url.Content(@row.Foto)" alt="">
                              <div class="title">
                                   <h4>@Html.DisplayFor(modelItem => row.Data)</h4>
                                   <small>Even slightly believable</small>
                              </div>
                         </div>
                         <div class="panel-body">
                              <p>
                                   <span class="label label-success">@Html.DisplayFor(modelItem => row.Status)</span>
                              </p>
                              <p style="text-align: justify; ">
                                   @Html.DisplayFor(modelItem => row.Descriere)
                              </p>
                              <button class="ladda-button btn btn-info" data-style="expand-right"><span class="ladda-label">@Html.ActionLink("Detalii", "Vizual", new { id = row.Id })</span><span class="ladda-spinner"></span></button>
                         </div>
                         <div class="panel-footer">
                              <span class="pull-right">
                                   <i class="fa fa-comments-o"> </i>@Html.DisplayFor(modelItem => row.Serii)
                              </span>
                              <i class="fa fa-eye"> </i> @Html.DisplayFor(modelItem => row.Nota)
                         </div>
                    </div>
               </div>
          }

     </div>

</div>

