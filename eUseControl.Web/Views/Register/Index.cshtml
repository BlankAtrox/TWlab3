
@{
     ViewBag.Title = "Test";
     Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}
@using System.Web.Optimization;
@model eUseControl.Web.Models.UserRegister

<div class="splash"> <div class="color-line"></div><div class="splash-title"><h1>Homer - Responsive Admin Theme</h1><p>Special Admin Theme for small and medium webapp with very clean and aesthetic style and feel. </p><div class="spinner"> <div class="rect1"></div> <div class="rect2"></div> <div class="rect3"></div> <div class="rect4"></div> <div class="rect5"></div> </div> </div> </div>

<div class="color-line"></div>
<div class="back-link">
     <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Home</a>
</div>

<div class="register-container">
     <div class="row">
          <div class="col-md-12">
               <div class="text-center m-b-md">
                    <h3>Registration</h3>
                    <small>Full suported AngularJS WebApp/Admin template with very clean and aesthetic style prepared for your next app. </small>
               </div>

               <div class="panel panel-filled">
                    <div class="panel-body">

                         @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                         {
                              @Html.AntiForgeryToken()
                              <div class="form-group">
                                   @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                                   @Html.TextBoxFor(m => m.Username, new
                                   {
                                       placeholder = "...",
                                       title = "Introduceti numele de utilizator",
                                       value = "",
                                       name = "nume",
                                       id = "nume",
                                       @class = "form-control",
                                       type="username"
                                   })
                                   <span class="help-block small">Your unique username to app</span>
                              </div>
                              <div class="form-group">
                                   @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                   @Html.TextBoxFor(m => m.Password, new
                                   {
                                       placeholder = "...",
                                       title = "Introduceti parola",
                                       value = "*",
                                       name = "parola",
                                       id = "parola",
                                       @class = "form-control",
                                       type ="password"
                                   })
                                   <span class="help-block small">Your strong password</span>
                              </div>
                              <div class="form-group">
                                   @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                   @Html.TextBoxFor(m => m.Email, new
                                   {
                                       placeholder = "...",
                                       title = "Introduceti email-ul",
                                       value = "",
                                       name = "email",
                                       id = "email",
                                       type="email",
                                       @class = "form-control"
                                   })
                                   <span class="help-block small">Your strong password</span>
                              </div>
                              <div style="text-align:center">
                                   <button type="submit" class="btn btn-outline-dark">Submit</button>
                                   <a class="btn btn btn-outline-dark" href="Login">Logare</a>
                                   <a class="btn btn btn-outline-dark" href="Home">Home</a>
                              </div>
                         }
                    </div>
               </div>
          </div>
